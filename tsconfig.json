{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "paths": {
      "@models/*": ["../../models"]
    },
    "declaration": true,
    "declarationDir": "./types"
  },
  "exclude": ["node_modules", "../../node_modules"],
  "include": ["src", "**/*.spec.ts", "jest.config.ts", "index.ts", "dist"]
}
